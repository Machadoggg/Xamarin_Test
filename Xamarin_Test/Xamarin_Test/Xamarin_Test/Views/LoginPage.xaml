                Margin="80,0">
                <Button
                    BackgroundColor="RoyalBlue"
                    CornerRadius="15"
                    Text="Login"
                    TextColor="White">
                </Button>
                <Button
                    BackgroundColor="SeaGreen"
                    CornerRadius="15"
                    Text="Register"
                    TextColor="White">
                </Button>
            </StackLayout>

        <StackLayout
