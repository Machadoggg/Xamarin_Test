            <Grid
                Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="E-Mail"/>
                <Entry
                    Grid.Row="0"
                    Grid.Column="1"
                    Keyboard="Email"
                    Placeholder="Enter your email..."/>

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Passsword">
                </Label>
                <Entry
                    Grid.Row="1"
                    Grid.Column="1"
                    IsPassword="True"
                    Placeholder="Enter your password...">
                </Entry>
                
            </Grid>

            <StackLayout
                Orientation="Horizontal">
                <Label
                    HorizontalOptions="StartAndExpand"
                    Text="Rememberme in this device"
                    VerticalOptions="Center"/>
                <Switch
                    HorizontalOptions="End">
                </Switch>
            </StackLayout>

            <ActivityIndicator>
            </ActivityIndicator>

            <!--tamaño de botones Margin="50,0"-->
